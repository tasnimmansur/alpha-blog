<h1 align="center">Chat Room</h1>
<div class="row chat-container">
  <div class="col-md-8 center-block">
    <div class="messages" id="messages">
      <%= render @messages %>
    </div>
    <hr />
    <div class="message-container">
      <%= form_for(@message, remote: true,:html => {class: "form-horizontal", role: "form"}) do |f| %>
          <div class="emoji-picker-container" style="min-width: 600px">
            <%= f.text_area :content, class: 'form-control', data: { emojiable: true, behavior: "room_speaker" },
                            placeholder: "Say something" %>
          </div>
          <%= f.submit "Send", class: 'btn btn-primary',
                       data: { send: "message" } %>
      <% end %>
    </div>
  </div>
</div>