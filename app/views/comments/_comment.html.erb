<div class="row">
  <div class="col-md-2">
    <section>
      <%= gravatar_for(comment.user, size: 60) %>
    </section>
  </div>

  <div class="col-md-8 well">
    <%= content_with_emoji(comment.description) %>
    <p style="float: right">
      <% if logged_in? && (current_user == comment.user || current_user.admin?) %>
        <%= link_to "", [comment.article, comment], :method => :delete, data: { confirm: 'Are you sure?' },class: "glyphicon glyphicon-trash", remote: true %>
      <% end %>
    </p>
    <p>
      <span class="quiet">
        <small>Created: <%= time_ago_in_words(comment.created_at) %> ago by <%= comment.user.username %></small>
      </span>
    </p>
  </div>
</div>