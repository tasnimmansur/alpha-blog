<div class="message">
  <p>
    <small><em>Created <%= time_ago_in_words(message.created_at) %>
      ago</em></small>
  </p>
  <p>
    <%= gravatar_for(message.user, size: 50) %>
    <strong><%= message.user.username.capitalize %></strong>
    <span class="content">
      <%= message.content %>
    </span>
  </p>
</div>